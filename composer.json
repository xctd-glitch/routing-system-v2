{
  "name": "srp/routing-system-v2",
  "description": "Smart Redirect Platform API and dashboard.",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.3",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-curl": "*",
    "ext-mbstring": "*",
    "ext-xml": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.9",
    "friendsofphp/php-cs-fixer": "^3.57"
  },
  "autoload": {
    "psr-4": {
      "SRP\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SRP\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
"lint": "vendor/bin/phpcs --standard=PSR12 src tests",
"stan": "vendor/bin/phpstan analyse --level=max",
"test": "vendor/bin/phpunit --fail-on-warning",
"quality": "composer lint && composer stan && composer test",
"build": "npm run build",
"ci": "composer install --no-progress --ansi && npm ci && npm run build && composer quality"
},
  "minimum-stability": "stable",
  "prefer-stable": true
}


