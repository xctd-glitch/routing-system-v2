{
  "require": {
    "php": "^8.3",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.89",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "scripts": {
    "cs": "php vendor/bin/phpcs --standard=phpcs.xml src tests",
    "cs-fix:dry": "php vendor/bin/php-cs-fixer fix --dry-run --diff",
    "phpstan": "php vendor/bin/phpstan analyse --level=max src index.php tests",
    "phpunit": "php vendor/bin/phpunit --fail-on-warning"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
